<title>

</title>
<body>
<h1> Welcome to the integration course client environment</h1>


<h4> Login:</h4>
    <%= form_for( :login,url:'/login',remote:true  ) do %>
    <p><%= text_field_tag 'email',nil,placeholder: 'Insert email', size:50,:required => true %></p>
    <p><%= text_field_tag 'playground',nil,placeholder: 'Insert playground', size:50,:required => true %></p>
    <%= hidden_field_tag(:request_type,'login') %>
    <p> <%= button_tag 'Submit' %></p>
  <% end %>

<h4> Confirm User:</h4>
  <%= form_for( :login,url:'/login',remote:true  ) do %>
  <p><%= text_field_tag 'email',nil,placeholder: 'Insert email', size:50,:required => true %></p>
  <p><%= text_field_tag 'playground',nil,placeholder: 'Insert playground', size:50,:required => true %></p>
  <p><%= text_field_tag 'code_validation',nil,placeholder: 'Insert validation code', size:50,:required => true %></p>
  <%= hidden_field_tag(:request_type,'confirm_user') %>
  <p> <%= button_tag 'Submit'%></p>
<% end %>

<h4> Create A New User:</h4>
<%= form_for( :login,url:'/login',remote:true  ) do %>
  <p><%= text_field_tag 'email',nil,placeholder: 'Insert email', size:50,:required => true %></p>
  <p><%= text_field_tag 'playground',nil,placeholder: 'Insert playground', size:50,:required => true %></p>
  <p><%= text_field_tag 'user_name',nil,placeholder: 'Insert username', size:50,:required => true %></p>
  <p><%= text_field_tag 'avatar',nil,placeholder: 'Insert avatar', size:50,:required => true %></p>
  <%= radio_button_tag 'user_type', 'manager'%>
  <%= label_tag 'Manager' %>
  <%= radio_button_tag 'user_type', 'player',true %>
  <%= label_tag 'Player' %>

  <%= hidden_field_tag(:request_type,'create_user') %>
  <p> <%= button_tag 'Submit'%></p>
  <% end %>


</body>


